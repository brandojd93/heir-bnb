  <p><%= @palace.name %></p>
  <div class="col-lg-12 pt-5">
    <div class="card-palace" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @palace.photo %>)">
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 palace-text">
      <h4><%= @palace.description %></h4>
      <p><%= @palace.location %></p>
      <p><strong>$<%= @palace.price %></strong></p>
    </div>
    <div class="col-lg-6 palace-book">
      <%= simple_form_for [@palace, @booking] do |f| %>
        <%= f.input :start_on, as: :date, html5: true %>
        <%= f.input :end_on, as: :date, html5: true %>
        <%= f.submit "reserve", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

